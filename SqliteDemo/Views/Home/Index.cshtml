@{
    Layout = null;
    ViewBag.Title = "Home Page";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>

    </title>
    <style type="text/css">
        * {margin:0;padding:0;}
        div { border: 1px solid #F00; width: 100px; height: 100px; position: relative;}
    </style>
    <script>
        window.onload = function () {

            var timer = null;
         
            function moveDiv(speed, target) {
                var oDiv = document.getElementById("div1");
                clearInterval(timer);
                timer = setInterval(function () {
                    if (parseInt(oDiv.style.left) >= target) {
                        speed = -speed;
                    }
                    if (parseInt(oDiv.style.left) <= 0) {
                        speed = -speed;
                    }
                    oDiv.style.left = oDiv.offsetLeft + speed + "px";
                }, 30);
            }

            document.getElementById("div1").onmouseout = document.getElementById("start").onclick = function () {
                var oDiv = document.getElementById("div1");
                var speed = 10; //移动速度
                var target = 300; //移动距离
                moveDiv(speed, target);
            }

            document.getElementById("div1").onmousemove= document.getElementById("stop").onclick = function () {
                clearInterval(timer);
            }
            
        }
    </script>
</head>

<body>
    <button id="start">start</button>
    <button id="stop">stop</button>
    <div id="div1"></div>
    <img src="~/Images/%e5%8c%97%e4%ba%ac.png" />

</body>
</html>
